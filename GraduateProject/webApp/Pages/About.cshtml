.about-section {
  padding: 50px;
  text-align: center;
  background-color: #07073B;
  color: white;
}

.container {
  padding: 0 16px;
}

.container::after, .row::after {
  content: "";
  clear: both;
  display: table;
}

.title {
  color: grey;
}

.button {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
}

.button:hover {
  background-color: #555;
}

@@media screen and (max-width: 650px) {
  .column {
    width: 100%;
    display: block;
  }
  @@import url(https://fonts.googleapis.com/css?family=Cinzel+Decorative:400,900);




.subtitle {
margin: 0 0 2em 0;
}
.fancy {
line-height: 0.5;
text-align: center;
}
.fancy span {
display: inline-block;
position: relative;  
}
.fancy span:before,
.fancy span:after {
content: "";
position: absolute;
height: 7px;

border-top: 5px solid #A8B1FF;
top: 0;
width: 150px;
}
.fancy span:before {
right: 100%;
margin-right: 15px;
}
.fancy span:after {
left: 100%;
margin-left: 15px;
}
}
</style>
</head>
